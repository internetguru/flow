#######################################
: $((i++))
start "hotfix stable"
  take "$i"
  { omgf -i \
   && echo a > a \
   && git add . \
   && git commit -m "add file a" \
   && omgf --yes release \
   && omgf --yes release \
   && git checkout v0.0.0
  } >/dev/null 2>&1
  debug "omgf -v --yes myhotfix"
  assert_equal $status 0
  assert_equal "$(git_current_branch)" "hotfix-myhotfix"
  assert_equal "$(gsp)" ""
end
