## HOTFIX
#######################################
: $((i++))
start "hotfix master"
  take "$i"
  { omgf -i; } >/dev/null
  debug "omgf -v --yes hotfix myhotfix"
  assert_equal $status 0
  assert_equal "$(git_current_branch)" "hotfix-myhotfix"
  assert_equal "$(gsp)" ""
